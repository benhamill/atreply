<% content_for :title do -%>
<%=  h 'Reply Chain for ID# ' + @reply_chain[-1].id -%>
<% end -%>
<% @reply_chain.each_reply do |reply| -%>
  <p><a class="author" href="http://twitter.com/<%= h reply.screen_name %>/"><%= h reply.author %></a> <%= h reply.text %></p>
  <p class="time"><%= h reply.time %></p>
<% end -%>
